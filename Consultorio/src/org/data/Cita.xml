<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Cita">

    <delete id="eliminar" parameterType="String">
        delete from "cita"
        where "cve_cita"=#{cve_cita}
    </delete>
    
    <update id="actualizar" parameterType="Paciente">
        UPDATE "cve_cita"
        SET "fecha"=#{fecha}
        WHERE "cve_cita"=#{cve_cita}
    </update>
    
    <insert id="insertar" parameterType="Pasiente"  keyProperty="id_estatus" >
        insert into "Pasiente"("id_estatus","estatus","estatus_idestatus","paciente_curp")  values (#{id_estatus},#{estatus},#{estatus_idestatus},#{paciente_curp})
    </insert>
