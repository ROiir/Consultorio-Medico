<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Estado">

    <delete id="eliminar" parameterType="String">
        delete from "estado"
        where "id_estatus"=#{id_estatus}
    </delete>
    
    <update id="actualizar" parameterType="Paciente">
        UPDATE "id_estatus"
        SET "estatus"=#{estatus}
        WHERE "id_estatus"=#{id_estatus}
    </update>
    
    <insert id="insertar" parameterType="Pasiente"  keyProperty="id_estatus" >
        insert into "Pasiente"("id_estatus","estatus")  values (#{id_estatus},#{estatus})
    </insert>
