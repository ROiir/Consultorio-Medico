    <resultMap type="Paciente" id="resultado"> 
        <id column="curp" property="curp"></id>
        <result column="nombre_pa" property="nombre"></result>
        <result column="direccion_pa" property="direccion_pa"></result>
        <result column="telefono_pa" property="telefono_pa"></result>
        <result column="email_pa" property="email_pa"></result>
    </resultMap>
</mapper>
