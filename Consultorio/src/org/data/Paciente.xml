<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Paciente">

    <delete id="eliminar" parameterType="String">
        delete from "paciente"
        where "curp"=#{curp}
    </delete>
    
    <update id="actualizar" parameterType="Paciente">
        UPDATE "curp"
        SET "nombre_pa"=#{nombre_pa}
        WHERE "curp"=#{curp}
    </update>
    
    <insert id="insertar" parameterType="Paciente"  keyProperty="curp" >
        insert into "paciente"("curp","nombre_pa","")  values (#{curp},#{nombre})
    </insert>
